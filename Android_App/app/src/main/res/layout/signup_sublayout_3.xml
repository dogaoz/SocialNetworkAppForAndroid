<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signup_sublayout3"
    android:visibility="gone"
    android:background="#44AAAA">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_person_white_48dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <com.dogaozkaraca.izunetwork.CustomViews.lobster
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Tam isim"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"/>
    <EditText

        android:id="@+id/editText14"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Parola"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/editText15"
        android:layout_below="@+id/editText14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Parolayı yeniden girin"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textColorHint="#808080"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        android:id="@+id/buttonSignup"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/editText15"
        android:layout_alignStart="@+id/editText15"
        android:layout_alignEnd="@+id/editText15" />





</RelativeLayout>